<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/itemLayout"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:paddingTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            android:id="@+id/layout_category">
            android:weightSum="100">

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="187dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/academic_picture"
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="70"
                    android:src="@drawable/academic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:layout_marginTop="150dp"
                    android:text="Conferences"
                    android:id="@+id/academic_event"
                    android:textSize="20sp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:id="@+id/layout_category1">
            android:orientation="vertical"
            android:weightSum="100">

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view1"
                android:layout_width="187dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    android:paddingLeft="10dp"
                    android:id="@id/cultural_picture"
                    android:layout_weight="70"
                    android:src="@drawable/cultural"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="30"
                    android:layout_marginTop="150dp"
                    android:gravity="center"
                    android:id="@id/cultural_event"
                    android:text="Cultural"
                    android:textSize="20sp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:paddingTop ="30sp"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:id="@+id/layout_category2">
            android:orientation="vertical"
            android:weightSum="100">

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_width="187dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    android:paddingLeft="18dp"
                    android:id="@+id/concerts_picture"
                    android:src="@drawable/entertainment"/>

                android:layout_weight="70" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:text="Concerts"
                    android:id="@+id/concerts_event"
                    android:layout_marginTop="150dp"
                    android:textSize="20sp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:id="@+id/layout_category3">
            android:orientation="vertical"
            android:weightSum="100">
            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view3"
                android:layout_width="187dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/festivals_picture"
                    android:src="@drawable/festivals"/>
                android:layout_weight="70" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:id="@+id/festivals_event"
                    android:text="Festivals"
                    android:layout_marginTop="150dp"
                    android:textSize="20sp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:paddingTop ="30sp"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:id="@+id/layout_category4">
            android:orientation="vertical"
            android:weightSum="100">
            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view4"
                android:layout_width="187dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/workshop_picture"
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:layout_height="153dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/workshop" />
                android:layout_weight="70" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:layout_marginTop="150dp"
                    android:text="Workshops"
                    android:id="@+id/workshop_event"
                    android:textSize="20sp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:id="@+id/layout_category5">
            android:orientation="vertical"
            android:weightSum="100">
            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view5"
                android:layout_width="187dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:layout_height="153dp"
                    android:id="@+id/exhibition_picture"
                    android:src="@drawable/exhibition"/>
                android:layout_weight="70" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:layout_marginTop="150dp"
                    android:text="Exhibition"
                    android:id="@id/workshop_event"
                    android:textSize="20sp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

